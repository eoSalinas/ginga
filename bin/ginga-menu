#!/bin/bash

export PATH="$HOME/.local/share/ginga/bin:$PATH"

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-c" "$index")
    fi
  fi

  echo -e "$options" | ginga-launch-walker --dmenu --width 295 --minheight 1 --maxheight 630 -p "$prompt…" "${args[@]}" 2>/dev/null
}

terminal() {
  xdg-terminal-exec --app-id=org.ginga.terminal "$@"
}

present_terminal() {
  ginga-launch-floating-terminal-with-presentation $1
}

show_capture_menu() {
  case $(menu "Capture" "  Screenshot\n  Screenrecord\n󰃉  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Screenrecord*) show_screenrecord_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_main_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Snap with Editing\n  Straight to Clipboard") in
  *Editing*) ginga-cmd-screenshot smart ;;
  *Clipboard*) ginga-cmd-screenshot smart clipboard ;;
  *) show_capture_menu ;;
  esac
}

show_screenrecord_menu() {
  ginga-cmd-screenrecord --stop-recording && exit 0

  case $(menu "Screenrecord" "  With desktop audio\n  With desktop + microphone audio\n  With desktop + microphone audio + webcam") in
  *"With desktop audio") ginga-cmd-screenrecord --with-desktop-audio ;;
  *"With desktop + microphone audio") ginga-cmd-screenrecord --with-desktop-audio --with-microphone-audio ;;
  *"With desktop + microphone audio + webcam") ginga-cmd-screenrecord --with-desktop-audio --with-microphone-audio --with-webcam ;;
  *) back_to show_capture_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "󱄄  Screensaver\n󰔎  Nightlight\n󱫖  Idle Lock\n󰍜  Top Bar") in
  *Screensaver*) ginga-toggle-screensaver ;;
  *Nightlight*) ginga-toggle-nightlight ;;
  *Idle*) ginga-toggle-idle ;;
  *Bar*) ginga-toggle-waybar ;;
  *) show_main_menu ;;
  esac
}

show_style_menu() {
  case $(menu "Style" "󰸌  Theme\n  Font\n  Background") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) ginga-theme-bg-next ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  ginga-launch-walker -m menus:gingathemes --width 800 --minheight 400
}

show_font_menu() {
  theme=$(menu "Font" "$(ginga-font-list)" "--width 350" "$(ginga-font-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    ginga-font-set "$theme"
  fi
}

show_setup_menu() {
  local options="  Audio\n  Wifi\n󰂯  Bluetooth\n󱐋  Power Profile\n󰱔  DNS"

  case $(menu "Setup" "$options") in
  *Audio*) ginga-launch-or-focus-tui wiremix ;;
  *Wifi*) ginga-launch-wifi ;;
  *Bluetooth*) ginga-launch-bluetooth ;;
  *Power*) show_setup_power_menu ;;
  *DNS*) present_terminal ginga-setup-dns ;;
  *) show_main_menu ;;
  esac
}

show_setup_power_menu() {
  profile=$(menu "Power Profile" "$(ginga-powerprofiles-list)" "" "$(powerprofilesctl get)")

  if [[ "$profile" == "CNCLD" || -z "$profile" ]]; then
    back_to show_setup_menu
  else
    powerprofilesctl set "$profile"
  fi
}

show_install_menu() {
  case $(menu "Install" "  Web App\n  TUI\n󰍲  Windows") in
  *Web*) present_terminal ginga-webapp-install ;;
  *TUI*) present_terminal ginga-tui-install ;;
  *Windows*) present_terminal "ginga-windows-vm install" ;;
  *) show_main_menu ;;
  esac
}

show_remove_menu() {
  case $(menu "Remove" "  Web App\n  TUI\n󰸌  Theme\n󰍲  Windows") in
  *Web*) present_terminal ginga-webapp-remove ;;
  *TUI*) present_terminal ginga-tui-remove ;;
  *Theme*) present_terminal ginga-theme-remove ;;
  *Windows*) present_terminal "ginga-windows-vm remove" ;;
  *) show_main_menu ;;
  esac
}

show_update_menu() {
  case $(menu "Update" "  Process\n󰇅  Hardware\n  Timezone\n  Time") in
  *Process*) show_update_process_menu ;;
  *Hardware*) show_update_hardware_menu ;;
  *Timezone*) present_terminal ginga-tz-select ;;
  *Time*) present_terminal ginga-update-time ;;
  *) show_main_menu ;;
  esac
}

show_update_process_menu() {
  case $(menu "Restart" "  Hypridle\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  *Hypridle*) ginga-restart-hypridle ;;
  *Hyprsunset*) ginga-restart-hyprsunset ;;
  *Swayosd*) ginga-restart-swayosd ;;
  *Walker*) ginga-restart-walker ;;
  *Waybar*) ginga-restart-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_hardware_menu() {
  case $(menu "Restart" "  Audio\n󱚾  Wi-Fi\n󰂯  Bluetooth") in
  *Audio*) present_terminal ginga-restart-pipewire ;;
  *Wi-Fi*) present_terminal ginga-restart-wifi ;;
  *Bluetooth*) present_terminal ginga-restart-bluetooth ;;
  *) show_update_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "  Lock\n󱄄  Screensaver\n󰤄  Suspend\n󰜉  Restart\n󰐥  Shutdown") in
  *Lock*) ginga-lock-screen ;;
  *Screensaver*) ginga-launch-screensaver force ;;
  *Suspend*) systemctl suspend ;;
  *Restart*) ginga-cmd-reboot ;;
  *Shutdown*) ginga-cmd-shutdown ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "  Capture\n  Style\n  Setup\n󰔎  Toggle\n󰉉  Install\n󰭌  Remove\n  Update\n  About")"
}

go_to_menu() {
  case "${1,,}" in
  *capture*) show_capture_menu ;;
  *toggle*) show_toggle_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *screenrecord*) show_screenrecord_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) ginga-launch-about ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
